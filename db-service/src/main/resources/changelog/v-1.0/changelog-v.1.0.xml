<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="createLoanTable" author="vtaratonov">
        <createTable tableName="loan">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="surname" type="varchar(30)"/>
            <column name="age" type="int"/>
            <column name="dependent_amount" type="int"/>
            <column name="salary" type="int"/>
            <column name="result" type="boolean"/>
        </createTable>
    </changeSet>
</databaseChangeLog>